{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@now/static-build"
        },
        {
            "src": "./api/main.ts",
            "use": "@now/node"
        }
    ],
    "env": {
        "GOOGLE_CLIENT_ID": "@google-client-id",
        "GOOGLE_CLIENT_SECRET": "@google-client-secret",
        "HOST_URL": "https://doto.now.sh",
        "DB_URL": "@db-url",
        "NODE_ENV": "production"
    },
    "routes": [
        { "src": "/api(/.*)", "dest": "/api/main.ts" },
        { "src": "/_nuxt/(.+)", "dest": "/_nuxt/$1" },
        { "src": "/200.html", "dest": "/200.html" },
        {
            "src": "/(.*)",
            "headers": { "cache-control": "s-maxage=0" },
            "dest": "/index.html"
        }
    ],
    "github": {
        "autoJobCancelation": false
    }
}
