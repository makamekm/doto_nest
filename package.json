{
  "name": "doto",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "n:dev": "nuxt",
    "n:build": "nuxt build",
    "n:start": "nuxt build && nuxt start",
    "nnow-build": "run-s build",
    "build": "run-s build:clean build:ui build:mt",
    "build:clean": "rm -rf .next .mt",
    "build:ui": "next build",
    "build:mt": "tsc --project tsconfig.build.json",
    "format": "prettier --write \"mt/**/*.ts\" \"pages/**/*.ts\"",
    "start": "ts-node mt/main.ts",
    "start:dev": "ts-node-dev --respawn --transpileOnly --ignore-watch \"pages\" --ignore-watch \"ui\" --ignore-watch \".next\" dev.ts",
    "start:prod": "NODE_ENV=production node ./.mt/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/platform-express": "^6.0.0",
    "express": "4.16.4",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "nuxt": "2.6.1",
    "axios": "0.18.0",
    "@nuxt/typescript": "2.6.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "jest": "^23.6.0",
    "ts-node": "^7.0.1",
    "ts-node-dev": "1.0.0-pre.32",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "tslint": "5.12.1",
    "typescript": "^3.2.4",
    "npm-run-all": "^4.1.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
