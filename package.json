{
  "name": "doto",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "now-build": "run-s build",
    "build": "run-s build:clean build:ui build:mt build:babel",
    "build:clean": "rm -rf .next",
    "build:ui": "next build",
    "build:mt": "tsc --project tsconfig.build.json",
    "build:babel": "babel .next/production-server -d .next/production-server --config-file ./.babelrc-server --extensions \".js\"",
    "format": "prettier --write \"src/**/*.ts\" \"pages/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpileOnly --ignore-watch \"pages\" --ignore-watch \".next\" src/main.ts",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:prod": "NODE_ENV=production node --require reflect-metadata .next/production-server/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/platform-express": "^6.0.0",
    "nest-next": "^0.6.3",
    "next": "^8.0.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.1.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@zeit/next-typescript": "^1.1.1",
    "@nestjs/testing": "^6.0.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "@types/react": "16.4.10",
    "@types/react-dom": "16.0.7",
    "@types/next": "8.0.3",
    "core-js": "3.0.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "jest": "^23.6.0",
    "ts-node-dev": "1.0.0-pre.32",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.12.1",
    "typescript": "^3.2.4",
    "npm-run-all": "^4.1.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
